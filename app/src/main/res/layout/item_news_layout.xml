<?xml version="1.0" encoding="utf-8"?>
<com.design.appproject.widget.MyFlexBoxLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:flexWrap="wrap"
    style="@style/index_news_four_item_box_style">
    <com.design.appproject.widget.MyImageView
    style="@style/index_news_four_item_img_style"
    android:id="@+id/news_iv" />
    <com.design.appproject.widget.MyFlexBoxLayout
        app:flexWrap="wrap"
        style="@style/index_news_four_item_right_box_style">
        <com.design.appproject.widget.MyTextView
            style="@style/index_news_four_item_right_title_style"
            android:id="@+id/news_title_tv"/>
        <com.design.appproject.widget.MyTextView
            style="@style/index_news_four_item_right_desc_style"
            android:id="@+id/news_desc_tv"/>
        <com.design.appproject.widget.MyTextView
            style="@style/index_news_four_item_right_text_style"
            android:id="@+id/news_time_tv"/>
    </com.design.appproject.widget.MyFlexBoxLayout>
</com.design.appproject.widget.MyFlexBoxLayout>
